<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Burbujas Flotantes</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        height: 100vh;
        background: linear-gradient(
          135deg,
          #1a1a2e,
          #16213e
        ); /* Fondo oscuro para contraste */
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .bubbles-container {
        position: relative;
        width: 100%;
        height: 100%;
      }

      .bubble {
        position: absolute;
        border-radius: 50%;
        background: white;
        border: 3px solid black;
        opacity: 0.8;
        animation: float 15s infinite ease-in-out;
        cursor: pointer;
      }

      .bubble:hover {
        background-color: #ddd;
      }

      /* Tamaños y posiciones aleatorias */
      .bubble-1 {
        width: 80px;
        height: 80px;
        top: 20%;
        left: 10%;
        animation-delay: 0s;
      }

      .bubble-2 {
        width: 120px;
        height: 120px;
        top: 60%;
        left: 30%;
        animation-delay: 2s;
      }

      .bubble-3 {
        width: 60px;
        height: 60px;
        top: 40%;
        left: 70%;
        animation-delay: 4s;
      }

      .bubble-4 {
        width: 100px;
        height: 100px;
        top: 80%;
        left: 50%;
        animation-delay: 6s;
      }

      .bubble-5 {
        width: 50px;
        height: 50px;
        top: 30%;
        left: 80%;
        animation-delay: 8s;
      }

      .bubble-6 {
        width: 120px;
        height: 120px;
        top: 80%;
        right: 10%;
        animation-delay: 1s;
      }

      .bubble-7 {
        width: 80px;
        height: 80px;
        top: 80%;
        left: 10%;
        animation-delay: 0.6s;
      }

      .bubble-8 {
        width: 50px;
        height: 50px;
        top: 50%;
        left: 10%;
        animation-delay: 0.3s;
      }

      .bubble-9 {
        width: 70px;
        height: 70px;
        top: 50%;
        left: 50%;
        animation-delay: 0.9s;
      }

      .bubble-10 {
        width: 70px;
        height: 70px;
        top: 5%;
        right: 5%;
        animation-delay: 2s;
      }

      /* Animación de flotación */
      @keyframes float {
        0%,
        100% {
          transform: translateY(0) translateX(0);
        }
        25% {
          transform: translateY(-50px) translateX(20px);
        }
        50% {
          transform: translateY(20px) translateX(-30px);
        }
        75% {
          transform: translateY(-30px) translateX(-20px);
        }
      }
    </style>
    <script>
      function navigateTo() {
        window.location.href = "/content/javascript";
      }
    </script>
  </head>
  <body>
    <div class="bubbles-container">
      <div onclick="navigateTo()" class="bubble bubble-1"></div>
      <div onclick="navigateTo()" class="bubble bubble-2"></div>
      <div onclick="navigateTo()" class="bubble bubble-3"></div>
      <div onclick="navigateTo()" class="bubble bubble-4"></div>
      <div onclick="navigateTo()" class="bubble bubble-5"></div>
      <div onclick="navigateTo()" class="bubble bubble-6"></div>
      <div onclick="navigateTo()" class="bubble bubble-7"></div>
      <div onclick="navigateTo()" class="bubble bubble-8"></div>
      <div onclick="navigateTo()" class="bubble bubble-9"></div>
      <div onclick="navigateTo()" class="bubble bubble-10"></div>
    </div>
  </body>
</html>
