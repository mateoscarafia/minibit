<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ACID LABS Challenge</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #000033;
        color: white;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: url("/images/background.jpg") no-repeat center center fixed;
        background-size: cover;
      }
      .game-container {
        width: 800px;
        background-color: color-mix(in srgb, transparent, white 10%);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 0 30px rgba(0, 0, 255, 0.5);
        position: relative;
        border: 2px solid #3e47f5;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .input-group {
        margin: 20px 0;
      }

      .casino-input {
        width: 100%;
        padding: 15px;
        border: 2px solid #3e47f5;
        border-radius: 8px;
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        font-size: 18px;
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5);
        outline: none;
      }

      .casino-input:focus {
        border-color: #00e1b4;
        box-shadow: 0 0 15px #00e1b4;
      }

      .save-btn {
        background: #44d17e;
        color: #000;
        border: none;
        padding: 12px 25px;
        font-size: 18px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        text-transform: uppercase;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
      }

      .save-btn:hover {
        background: linear-gradient(to bottom, #44d17e, #44d17e);
        box-shadow: 0 8px 20px #44d17e;
        transform: translateY(-2px);
        color: #000;
      }

      .save-btn:active {
        transform: translateY(1px);
      }

      .saved-value {
        margin-top: 20px;
        padding: 10px;
        background-color: rgba(0, 0, 0, 0.3);
        border-radius: 5px;
        color: #44d17e;
        font-size: 16px;
        min-height: 20px;
      }
    </style>
  </head>

  <body>
    <div class="game-container">
      <div class="input-group">
        <input
          type="text"
          id="casinoInput"
          class="casino-input"
          placeholder="Escribe tu nombre"
        />
      </div>

      <button class="save-btn" id="saveBtn">Guardar</button>
    </div>
  </body>
  <script>

    <% if (useWebSocket) { %>
        const socket = new WebSocket(`ws://${window.location.host}`);
        socket.addEventListener('message', (event) => {
            const message = JSON.parse(event.data);
            if (message.type === 'game-starter') {

                if(message.data.start){
                    const url = new URL(window.location.href);
                    window.location.href = `${url.origin}/home`;
                }
            }
        });
    <% } %>


        document.addEventListener("DOMContentLoaded", function () {
            const input = document.getElementById("casinoInput");
            const saveBtn = document.getElementById("saveBtn");

            // Load saved text if it exists
            const savedValue = localStorage.getItem("nombre-user");
            if (savedValue) {
                input.value = savedValue;
            }

            // Save to localStorage when button is clicked
            saveBtn.addEventListener("click", function () {
                const textToSave = input.value.trim();
                console.log(textToSave)
                if (textToSave) {
                    localStorage.setItem("nombre-user", textToSave);


                    // Add visual feedback
                    saveBtn.textContent = "Guardado!";
                    saveBtn.style.background =
                        "linear-gradient(to bottom, #44D17E, #44D17E)";
                    setTimeout(() => {
                        saveBtn.textContent = "Guardar";
                        saveBtn.style.background =
                            "linear-gradient(to bottom, #44D17E, #44D17E)";
                    }, 1500);
                }
            });

            // Optional: Save when Enter key is pressed
            input.addEventListener("keypress", function (e) {
                if (e.key === "Enter") {
                    saveBtn.click();
                }
            });
        });
  </script>
</html>
